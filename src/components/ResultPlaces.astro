---
import { Picture } from 'astro:assets';

import digitalBondageScreenshot from '../assets/images/results-post/digital-bondage.jpg'
import lifeCrossingScreenshot from '../assets/images/results-post/life-crossing.jpg'
import voVseScreenshot from '../assets/images/results-post/vo-vse.jpg'
---

<div style="margin-top: 1em; text-align:center;">
	<div class="place">
		<Picture src={digitalBondageScreenshot} alt="screenshot" />

		<div class="place__text">
			<span>1 место</span>

			<span style="font-size: 5em;">Digital Bondage Jailer Angels XXL</span>

			<span>30 000 рублей</span>
		</div>
	</div>

	<div class="place">
		<Picture src={voVseScreenshot} alt="screenshot" />

		<div class="place__text">
			<span>2 место</span>

			<span style="font-size: 4.75em;">Во все дыры</span>

			<span>18 000 рублей</span>
		</div>
	</div>

	<div class="place">
		<Picture src={lifeCrossingScreenshot} alt="screenshot" />

		<div class="place__text">
			<span>3 место</span>

			<span style="font-size: 4.5em;">Life Crossing</span>

			<span>12 000 рублей</span>
		</div>
	</div>
</div>

<style is:inline>
	.place {
		width: 100%;
		height: 375px;

		position: relative;
	}

	.place picture,
	.place picture img {
		display: block;

		width: 100%;
		height: 100%;
	}

	.place picture,
	.place__text {
		position: absolute;

		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
	}

	.place picture img {
		object-fit: cover;
	}

	.place__text {
		display: flex;

		flex-direction: column;

		align-items: center;
		justify-content: center;

		background-color: rgb(0 0 0 / 45%);

		gap: 1rem;
	}

	.place__text span {
		display: block;

		font-size: 2rem;
		color: #fff;
		line-height: 1.25;
	}

	@media screen and (max-width: 768px) {
		.place {
			font-size: 10px;

			height: 250px;
		}
	}
</style>
