---
import { formatDate } from '../utils/date';

interface Props {
	date: Date;
	mini?: boolean;
}

const { date, mini } = Astro.props;
---

<time class={mini ? 'mini-time' : null} datetime={date.toISOString()}>
	{formatDate(date, 'long')}
</time>

<style>
	.mini-time {
		font-size: 0.8125em; /* 13px /16 */
		color: var(--darkgray);
		word-spacing: -0.5px;
	}
</style>
